<?xml version="1.0"?>
<project name="ea-webapp-deploy" default="deploy-all" basedir=".">
	<property file="enviroment.properties"/>
	<property file="${enviroment}/${enviroment}.credientials.properties"/>
	<property file="${enviroment}/${enviroment}.properties"/>

	<path id="antlib_classpath">
		<pathelement location="../../antLib" />
	</path>
	
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="antlib_classpath" />
	
	<target name="deploy-all">
		<antcall target="deploy-tomcat-webapp" />
		<antcall target="import-database-dump" />
		<!--antcall target="deploy-templates" /-->
	</target>
	
	<target name="import-database-dump">
		<ant antfile="${enviroment}/mongodb-${enviroment}.xml" target="mongo-import-dump" />
	</target>	
	
	<target name="deploy-tomcat-webapp">
		<ant antfile="${enviroment}/tomcat-${enviroment}.xml" target="full-deploy" />
	</target>
	
	<target name="mongo-start-replica-set">
		<ant antfile="${enviroment}/mongodb-${enviroment}-replicaset.xml" target="mongo-start-replica-set" />
	</target>	
	
	<target name="mongo-repl-set-import-dump">
		<ant antfile="${enviroment}/mongodb-${enviroment}-replicaset.xml" target="mongo-repl-set-import-dump" />
	</target>	
	
	<target name="deploy-queue-pooler">
		<!-- TODO kill pooler process -->
		<!-- TODO kill -9 pid,  -->
		<!-- killall processname -->
		<ant antfile="${enviroment}/ea-worker-${enviroment}.xml" target="deploy-queue-pooler" />
	</target>	
	
	<target name="deploy-templates">
		<!-- TODO deploy template to amazon s3 -->
		<ant antfile="${enviroment}/ea-worker-${enviroment}.xml" target="upload-templates" />
	</target>
	
	<target name="restart-tomcat">
		<ant antfile="${enviroment}/tomcat-${enviroment}.xml" target="stop-tomcat" />
		<ant antfile="${enviroment}/tomcat-${enviroment}.xml" target="start-tomcat" />
	</target>		
</project>